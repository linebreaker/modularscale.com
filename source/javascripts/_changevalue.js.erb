function getBase() {
  var order = [];
  var bases = document.getElementsByClassName('base');
  msBase = [];
  for (var i = 0; i < bases.length; i++) {
    v = ('0' + bases[i].value).match(/^(\d+(?:\.\d+)?)(.*)$/);
    if (v[1] > 0) {
      msBase.push(v[1].slice(1));
    } else {
      msError = 'Your base must be greater than 0';
    }
    if (msUnit == null) {
      msUnit = v[2];
    }
  }

  return msBase;
};

function changeBase(e,k) {

  msBase = [];
  msUnit = null;
  var msError = false;

  // Change the base with arrow keys
  if (e != null) {
    var thisValue = e.value.match(/^(\d+(?:\.\d+)?)(.*)$/);
    var step = 10;
    if (window.event.altKey) {
      step = 1;
    }
    if (window.event.shiftKey) {
      step = 100;
    }
    if (k == 38) {
      e.value = ((thisValue[1]-0) * 10 + step) / 10 + thisValue[2];
    } else if (k == 40) {
      if (thisValue[1] > 1) {
      e.value = ((thisValue[1]-0) * 10 - step) / 10 + thisValue[2];
      }
    }
  }
  getBase();
  if (msError == false) {
    msPage(msBase, msUnit, msRatio);
    error(msError);
  } else {
    error(msError);
  }

  codeMode(mode);
}

function changeRatio() {

  msRatio = [];
  var msError = false;

  var ratios = document.getElementsByClassName('ratio');
  for (var i = 0; i < ratios.length; i++) {
    v = parseFloat(ratios[i].value);
    if (typeof(v) == 'number') {
      msRatio.push(v);
    } else {
      msError = true;
    }
    if (v <= 1) {
      msError = 'Your ratio needs to be greater than 1';
    }
  }
  if (msError == false) {
    msPage(msBase, msUnit, msRatio);
    error(msError);
  } else {
    error(msError);
  }

  codeMode(mode);
}
