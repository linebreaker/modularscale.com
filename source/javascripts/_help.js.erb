var help = false

function helpT() {
  if (help) {
    document.body.classList.remove('help');
    document.cookie = 'helpF';
    help = false;
  } else {
    document.body.classList.add('help');
    document.cookie = 'helpT';
    help = true;
    mixpanel.track('Toggled help');
  }
}

if (document.cookie.split('help')[1] == 'T') {
  helpT();
}

// Toggle about panel section
function aboutA(a) {
  msPanel('about');
  mixpanel.track('Help link: ' + a);
  var top = document.getElementById(a).offsetTop;
  document.getElementById('about').scrollTop = (top - 12);
}
