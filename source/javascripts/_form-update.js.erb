function formUpdate() {
  document.getElementsByClassName('base')[0].value = $[thread].b[0] + $[thread].u;
  document.getElementById('ratio').value = $[thread].r;
  if ($[thread].b.length > 1) {
    for (var i = 1; i < $[thread].b.length; i++) {
      addBase($[thread].b[i] + $[thread].u);
    }
  }
}
